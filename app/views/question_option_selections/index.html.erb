<p id="notice"><%= notice %></p>

<h1>Question Option Selections</h1>

<table>
  <thead>
    <tr>
      <th>Question answer</th>
      <th>Question option</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @question_option_selections.each do |question_option_selection| %>
      <tr>
        <td><%= question_option_selection.question_answer %></td>
        <td><%= question_option_selection.question_option %></td>
        <td><%= link_to 'Show', question_option_selection %></td>
        <td><%= link_to 'Edit', edit_question_option_selection_path(question_option_selection) %></td>
        <td><%= link_to 'Destroy', question_option_selection, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

