<p id="notice"><%= notice %></p>

<h1>Surveys</h1>

<table>
  <thead>
    <tr>
      <th>Name</th>
      <th>Creationdate</th>
      <th>Expirydate</th>
      <th>Likes</th>
      <th>Dislikes</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @surveys.each do |survey| %>
      <tr>
        <td><%= survey.survey_name %></td>
        <td><%= survey.creationDate %></td>
        <td><%= survey.expiryDate %></td>
        <td><%= survey.likes %></td>
        <td><%= survey.dislikes %></td>
        <td><%= link_to 'Show', survey %></td>
        <td><%= link_to 'Edit', edit_survey_path(survey) %></td>
        <td><%= link_to 'Destroy', survey, method: :delete, data: { confirm: 'Are you sure?' } %></td>
        <td><%= link_to 'Answer Survey', new_question_answer_path %></td>
      </tr>
    <% end %>
  </tbody>
</table>

