<div class="row" style="background-image: url(<%= asset_path 'background_6.jpg' %>);min-height: calc(100% - 88px);">
  <div class="col">
    <% questions = @survey.questions %>
    <%# questions.each do |question| %>
      <%#= render 'answer_question_form', question_answer: QuestionAnswer.new, question: question %>
    <%# end %>
    <div class='row' style="width:320px;margin-left: 5%;padding: 10px 10px;background-color: #df7c59;margin-right: 5%;">
        <div class='col' style="color:#fff">
            <strong>Expiry Date:</strong>
            <%= @survey.expiryDate %>
        </div>
    </div>
    <div style="height:20px;"></div>
    <div class='row' style="width:320px;margin-left: 5%;padding: 10px 10px;background-color: #df7c59;margin-right: 5%;">
        <div class='col' style="color:#fff">
            <strong>Rating:</strong>
            <span id="rating"></span><br>
        </div>
    </div>
    <div style="height:20px;"></div>
    <div class='row' style="margin-left: 5%;padding: 10px 10px;background-color: #df7c59;margin-right: 5%;">
        <div class='col' style="color:#fff">
            <%# template for tables for questions - there would obviously be an unknown number of questions and answers, so this <table>
            must be generated using javascript from the streamed data (FRONT END) %>
            <span id="tableOfQuestions"></span><br>
            <%#= Rails.application.routes.url_helpers.surveys_survey_analytics_path(@survey) %><br>
        </div>
    </div>
    <div style="height:20px;"></div>
  </div>
</div>
